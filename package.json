{
  "private": true,
  "name": "coding-blog",
  "description": "My digital garden for web development.",
  "version": "0.0.0",
  "author": "Thilo Maier <git@maier.asia>",
  "homepage": "https://coding.maier.dev",
  "keywords": [
    "gatsby"
  ],
  "engines": {
    "node": "10.x"
  },
  "license": "MIT",
  "scripts": {
    "dev": "cross-env GATSBY_TELEMETRY_DISABLED=1 gatsby develop",
    "build": "rm -rf ./public && cross-env GATSBY_TELEMETRY_DISABLED=1 gatsby build",
    "serve": "cross-env GATSBY_TELEMETRY_DISABLED=1 gatsby serve",
    "clean": "cross-env GATSBY_TELEMETRY_DISABLED=1 gatsby clean",
    "lint": "yarn run lint:code && yarn run lint:other",
    "lint:code": "eslint . --ignore-path .gitignore",
    "lint:other": "yarn run prettier --check",
    "prettier": "prettier \"**/*.{md,mdx,css,yaml,yml}\" --ignore-path .gitignore",
    "format": "yarn run format:code && yarn run format:other",
    "format:code": "yarn run lint:code --fix",
    "format:other": "yarn run prettier --write",
    "purge": "rm -rf ./node_modules"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "cross-env": "^7.0.2",
    "gatsby": "^2.21.19",
    "gatsby-theme-notes": "^1.3.19",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@shopify/eslint-plugin": "36.1.0",
    "eslint": "6.8.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.2"
  }
}
